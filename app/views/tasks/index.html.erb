<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_destroy_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete ?"}  %></li>
  <% end %>
</ul>

<%= link_to "Add a New task", tasks_new_path %>
